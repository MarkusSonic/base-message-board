pragma solidity ^0.8.20;

contract BaseMessageBoard {

    struct Message {
        address sender;
        string content;
        uint256 timestamp;
    }

    Message[] public messages;

    mapping(address => bool) public hasPosted;

    event MessagePosted(address indexed sender, string content);

    function postMessage(string memory _content) public {
        require(!hasPosted[msg.sender], "You already posted.");

        messages.push(Message({
            sender: msg.sender,
            content: _content,
            timestamp: block.timestamp
        }));

        hasPosted[msg.sender] = true;

        emit MessagePosted(msg.sender, _content);
    }

    function getTotalMessages() public view returns (uint256) {
        return messages.length;
    }
}
